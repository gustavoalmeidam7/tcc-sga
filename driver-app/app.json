{
  "expo": {
    "name": "SGA Motorista",
    "slug": "driver-app",
    "version": "1.0.0",
    "description": "Aplicativo para motoristas do Sistema de Gestão de Ambulâncias - Gerencie suas viagens e navegação de forma eficiente",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "driverapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "primaryColor": "#3B82F6",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E293B"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sga.driverapp",
      "buildNumber": "1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Este app precisa de acesso à sua localização para navegação durante as viagens.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Este app precisa de acesso à sua localização para navegação durante as viagens.",
        "UIBackgroundModes": ["location"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1E293B",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "package": "com.sga.driverapp",
      "versionCode": 1,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ],
      "blockedPermissions": [
        "android.permission.RECORD_AUDIO"
      ],
      "edgeToEdgeEnabled": false,
      "predictiveBackGestureEnabled": false,
      "softwareKeyboardLayoutMode": "pan",
      "navigationBar": {
        "backgroundColor": "#1E293B",
        "barStyle": "light-content"
      }
    },
    "androidStatusBar": {
      "backgroundColor": "#1E293B",
      "barStyle": "light-content",
      "translucent": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1E293B",
          "dark": {
            "backgroundColor": "#0F172A"
          }
        }
      ],
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Este app precisa de acesso à sua localização para navegação durante as viagens."
        }
      ],
      "expo-maps"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "7c89f749-6d46-498b-a0b0-67fc8ad225d8"
      }
    }
  }
}

