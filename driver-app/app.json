{
  "expo": {
    "name": "SGA Motorista",
    "slug": "driver-app",
    "version": "1.0.0",
    "main": "index.js",
    "description": "Aplicativo para motoristas do Sistema de Gestão de Ambulâncias - Gerencie suas viagens e navegação de forma eficiente",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "driverapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "primaryColor": "#3B82F6",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E293B"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sga.driverapp",
      "buildNumber": "1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Este app precisa de acesso à sua localização para navegação durante as viagens.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Este app precisa de acesso à sua localização para navegação durante as viagens.",
        "UIBackgroundModes": [
          "location",
          "location"
        ],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1E293B",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "package": "com.sga.driverapp",
      "versionCode": 1,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "blockedPermissions": [
        "android.permission.RECORD_AUDIO"
      ],
      "edgeToEdgeEnabled": false,
      "predictiveBackGestureEnabled": false,
      "softwareKeyboardLayoutMode": "pan",
      "navigationBar": {
        "backgroundColor": "#1E293B",
        "barStyle": "light-content"
      }
    },
    "androidStatusBar": {
      "backgroundColor": "#1E293B",
      "barStyle": "light-content",
      "translucent": false
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/icon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1E293B",
          "dark": {
            "backgroundColor": "#0F172A"
          }
        }
      ],
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Este app precisa de acesso à sua localização para navegação durante as viagens."
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    },
    "extra": {
      "eas": {
        "projectId": "fec5bd5f-8f8a-4d63-b97e-a2e4ac8c2880"
      }
    },
    "owner": "maikwk33"
  }
}
